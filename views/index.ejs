    <script>
      $(document).ready(function(){

        $('.fa-times').on('click', function(){
          var id = $(this).attr('id');
          $.ajax({
            url: '/chingu/'+id,
            type: 'DELETE',
            complete: function(){
              window.location.reload(true);
            }
          });
        });

        $('.update[data-toggle=modal]').click(function () {
          var cohort_id = $(this).attr('id');
          $('#updateForm').attr("action", "/chingu/"+cohort_id);
        })
      })

    </script>

